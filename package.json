{
  "name": "vuestic-ui",
  "version": "1.0.0-alpha.2",
  "license": "MIT",
  "repository": "https://github.com/epicmaxco/vuestic-ui",
  "devDependencies": {
    "lerna": "^3.20.2"
  },
  "private": true,
  "scripts": {
    "serve": "lerna run serve --stream",
    "test": "lerna run test --stream",
    "lint": "lerna run lint --stream --",
    "build": "lerna run build --stream",
    "serve:book": "lerna run serve:book --stream",
    "build:book": "lerna run build:book --stream",
    "test:unit": "lerna run test:unit --stream",
    "lint:style": "lerna run lint:style --stream",
    "serve:docs": "lerna run serve:docs --stream",
    "serve:docs:nuxt": "lerna run serve:docs:nuxt --stream",
    "build:docs": "lerna run build:docs --stream",
    "push": "lerna run push --stream",
    "push-production": "lerna run push-production --stream"
  },
  "workspaces": [
     "packages/*"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "yarn lint --fix",
      "git add"
    ],
    "*.vue": [
      "yarn lint --fix",
      "yarn lint:style --fix",
      "git add"
    ],
    ".{htm,html,css,sss,less,scss}": [
      "yarn lint:style --fix",
      "git add"
    ]
  }
}
